<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".katalog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/mainlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/baju"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/menuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mainlogo"
            android:textSize="30sp"
            android:textColor="#996e17"
            android:text="CATALOGUE" />

        <ImageView
            android:id="@+id/katalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/menuname"
            android:src="@drawable/baju1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/katalog"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="NB A31 Hitam" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nama"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="Rp 218.000" />

        <ImageView
            android:id="@+id/katalog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@id/harga"
            android:src="@drawable/baju2"
            android:layout_centerHorizontal="true"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/nama1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/katalog1"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="NB A33 Coklat" />

        <TextView
            android:id="@+id/harga1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nama1"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="Rp 218.000" />

        <ImageView
            android:id="@+id/katalog2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/harga1"
            android:src="@drawable/baju3"
            android:layout_centerHorizontal="true"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/nama2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/katalog2"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="07 L" />

        <TextView
            android:id="@+id/harga2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nama2"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="Rp 315.000" />

        <ImageView
            android:id="@+id/katalog3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/harga2"
            android:src="@drawable/baju4"
            android:layout_centerHorizontal="true"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/nama3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/katalog3"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="013 S Navy" />

        <TextView
            android:id="@+id/harga3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nama3"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="Rp 295.000" />

        <ImageView
            android:id="@+id/katalog4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/harga3"
            android:src="@drawable/baju5"
            android:layout_centerHorizontal="true"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/nama4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/katalog4"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="013 S Abu Muda" />

        <TextView
            android:id="@+id/harga4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nama4"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="Rp 295.000" />

        <ImageView
        android:id="@+id/katalog5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/harga4"
        android:src="@drawable/baju6"
        android:layout_centerHorizontal="true"
        tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/nama5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/katalog5"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="012 L Maroon" />

        <TextView
            android:id="@+id/harga5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nama5"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="Rp 305.000" />

        <ImageView
            android:id="@+id/katalog6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/harga5"
            android:src="@drawable/baju7"
            android:layout_centerHorizontal="true"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/nama6"
            android:layout_width="wrap_content"
